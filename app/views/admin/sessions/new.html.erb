<div class="container">
  <div class="row">
      <div class="col-6 offset-3">
        <h2>管理者ログイン</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :"メールアドレス",class:"form-label mt-3"%>
            <%= f.email_field :email, autofocus: true,placeholder:"sample@example.com", autocomplete: "email",class:"form-control" %>
          </div>
          <div class="field">
            <%= f.label :"パスワード",class:"form-label mt-3" %>
            <%= f.password_field :password, autocomplete: "current-password",class:"form-control" %>
          </div>
          <div class="actions my-2 text-center">
            <%= f.submit "ログイン",class:"btn btn-primary mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
