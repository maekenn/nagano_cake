  <div class="container new-item">
  <h2>新着商品</h2>
  <div class="row">
   <div class="row mt-3 mb-3 text-center text-xs-center text-sm-center text-md-left">
      <% @items.each do |item| %>
       <div class="col-xs-10 col-sm-10 col-md-6 col-lg-3">
        <div class="card w-100 bg-transparent border-0" style="width: 18rem;">
         <%= link_to item_path(item.id) do %>
          <p class="img-wrap">
           <% if item.image.attached? %>
            <%= image_tag item.image, size: "200x150" %>
           <% else %>
            <%= image_tag 'default-image.jpeg', size: "180x100" %>
           <% end %>
          </p>
         <% end %>
        <div class="card-body">
          <p class="item-details item-name card-text"><%= item.name %></p>
          <% if item.is_active == true %>
            <p class="item-details card-text">¥<%= (item.price * 1.10).to_i.to_s(:delimited, delimiter: ',') %></p>
          <% else %>
            <p class="text-danger font-weight-bold card-text">売り切れ</p>
          <% end %>
        </div>
       </div>
      </div>
      <% end %>
  </div>
  </div>
  <div class="all-items-show-button"><%= link_to "全ての商品をみる", items_path %></div>
</div>